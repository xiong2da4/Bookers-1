<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <header>
    <% if flash[:notice] %>
      <p><%= flash[:notice] %></p>
    <% end %>
    <% @book.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
   </header>

    <%= yield %>
  </body>
</html>